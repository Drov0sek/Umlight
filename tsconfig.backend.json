{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/backend/**/*"],
  "exclude": ["node_modules", "dist", "src/frontend"]
}