{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "generated/prisma/client": ["node_modules/.prisma/client"]
    }
  },
  "include": ["src/backend/**/*"],
  "exclude": ["node_modules", "dist", "src/frontend"]
}